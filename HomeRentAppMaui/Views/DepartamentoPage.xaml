<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HomeRentAppShared.Models;assembly=HomeRentAppShared"
             x:Class="HomeRentAppMaui.Views.DepartamentoPage"
             Title="Departamentos">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Button Text="Agregar Departamento"
                    Clicked="OnAgregarClicked"
                    BackgroundColor="Orange"
                    TextColor="White"
                    CornerRadius="10" />

            <CollectionView x:Name="DepartamentosCollection">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Departamento">
                        <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="10">
                            <VerticalStackLayout Spacing="5">
                                <Image Source="{Binding Imagen, Converter={StaticResource Base64ToImageConverter}}"
                           HeightRequest="150" Aspect="AspectFill"/>
                                <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding Direccion}" FontSize="14"/>
                                <Label Text="{Binding Precio, StringFormat='Precio: {0:C}'}" FontSize="14"/>
                                <Label Text="{Binding CuartosDisponibles, StringFormat='Cuartos: {0}'}" FontSize="14"/>
                                <Button Text="Ver Departamento" BackgroundColor="Orange" TextColor="White"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
