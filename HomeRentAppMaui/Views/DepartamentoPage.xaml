<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HomeRentAppShared.Models;assembly=HomeRentAppShared"
             x:Class="HomeRentAppMaui.Views.DepartamentoPage"
             Title="Departamentos">

    <VerticalStackLayout Padding="10">
        <Button Text="Agregar Departamento" 
                Clicked="OnAgregarDepartamentoClicked"
                BackgroundColor="#ff6600"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="40"
                Margin="0,0,0,10"/>

        <CollectionView x:Name="DepartamentosCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Departamento">
                    <Frame BorderColor="#ccc" CornerRadius="10" Padding="10" Margin="0,5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Nombre}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding Direccion}" FontSize="14"/>
                            <Label Text="{Binding Precio, StringFormat='Precio: {0:C}'}" FontSize="14" TextColor="Green"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
