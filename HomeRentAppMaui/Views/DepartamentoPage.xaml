<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:HomeRentAppShared.Models;assembly=HomeRentAppShared"
             x:Class="HomeRentAppMaui.Views.DepartamentoPage"
             Title="Departamentos">

    <CollectionView x:Name="DepartamentosCollection">
        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="models:Departamento">
                <VerticalStackLayout Padding="10">
                    <Label Text="{Binding Nombre}" FontAttributes="Bold"/>
                    <Label Text="{Binding Direccion}" FontSize="12"/>
                    <Label Text="{Binding Precio, StringFormat='Precio: {0:C}'}"/>
                </VerticalStackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
