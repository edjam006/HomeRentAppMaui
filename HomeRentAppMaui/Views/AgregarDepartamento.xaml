<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeRentAppMaui.Views.AgregarDepartamentoPage">

    <Grid>
        <Image Source="background_app.jpg"
                   Aspect="AspectFill"
                   Opacity="0.25"
                   IsEnabled="False"
                   Grid.RowSpan="2" />

        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <Image x:Name="PreviewImage" HeightRequest="200"/>
                <Button Text="Seleccionar Imagen" Clicked="OnSeleccionarImagenClicked" />

                <Entry x:Name="NombreEntry" Placeholder="Nombre" />
                <Entry x:Name="DireccionEntry" Placeholder="DirecciÃ³n" />
                <Entry x:Name="PrecioEntry" Placeholder="Precio" Keyboard="Numeric"/>
                <Entry x:Name="CuartosEntry" Placeholder="Cuartos Disponibles" Keyboard="Numeric"/>

                <Button Text="Guardar"
                        Clicked="OnGuardarClicked"
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="10"/>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
