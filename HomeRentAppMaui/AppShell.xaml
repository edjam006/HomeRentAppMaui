<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HomeRentAppMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HomeRentAppMaui.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="HomeRentAppMaui">


    <ShellContent
        Title="Departamentos"
        ContentTemplate="{DataTemplate views:DepartamentoPage}"
        Route="DepartamentoPage" />
    <ShellContent 
        Title="Inicio" 
        ContentTemplate="{DataTemplate views:IndexPage}" 
        Route="IndexPage" />
    
    <ShellContent 
        Title="Login" 
        ContentTemplate="{DataTemplate views:LoginPage}" 
        Route="LoginPage" />
    
    <ShellContent 
        Title="Registro" 
        ContentTemplate="{DataTemplate views:RegistroPage}" 
        Route="RegistroPage" />


</Shell>
